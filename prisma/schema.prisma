generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id       String    @id @default(uuid())
  name     String
  slug     String
  imageUrl String
  products Product[] // Faz com que a categoria tenha uma relação com os produtos 
}

model Product {
  id                 String   @id @default(uuid())
  name               String
  slug               String
  description        String
  basePrice          Decimal  @db.Decimal(8, 2)
  imageUrl           String
  categoryId         String
  category           Category @relation(fields: [categoryId], references: [id])
  discountPercentage Int      @default(0)
}

